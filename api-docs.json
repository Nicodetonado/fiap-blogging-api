{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Blogging para Professores",
    "description": "API REST para criação e gerenciamento de posts educacionais",
    "version": "1.0.0",
    "contact": {
      "name": "Tech Challenge Team",
      "email": "team@techchallenge.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Servidor de Desenvolvimento"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Listar Posts",
        "description": "Retorna lista de posts publicados com paginação",
        "tags": ["Posts"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Número da página",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Posts por página",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Ordenação",
            "schema": {
              "type": "string",
              "default": "-createdAt"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Posts recuperados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "posts": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Post"
                          }
                        },
                        "totalPosts": {
                          "type": "integer"
                        },
                        "totalPages": {
                          "type": "integer"
                        },
                        "hasNextPage": {
                          "type": "boolean"
                        },
                        "hasPrevPage": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Criar Post",
        "description": "Cria um novo post (apenas para professores)",
        "tags": ["Posts"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "content", "author"],
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 200,
                    "example": "Título do Post"
                  },
                  "content": {
                    "type": "string",
                    "minLength": 10,
                    "example": "Conteúdo do post..."
                  },
                  "author": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 100,
                    "example": "Nome do Professor"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "example": ["tag1", "tag2"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Post"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Buscar Post por ID",
        "description": "Retorna um post específico por ID",
        "tags": ["Posts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do post",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Post"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Post não encontrado"
          },
          "403": {
            "description": "Post não está publicado"
          }
        }
      },
      "put": {
        "summary": "Atualizar Post",
        "description": "Atualiza um post existente (apenas para professores)",
        "tags": ["Posts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do post",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 200
                  },
                  "content": {
                    "type": "string",
                    "minLength": 10
                  },
                  "author": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 100
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "isPublished": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post atualizado com sucesso"
          },
          "404": {
            "description": "Post não encontrado"
          },
          "400": {
            "description": "Dados inválidos"
          }
        }
      },
      "delete": {
        "summary": "Excluir Post",
        "description": "Exclui um post (apenas para professores)",
        "tags": ["Posts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID do post",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post excluído com sucesso"
          },
          "404": {
            "description": "Post não encontrado"
          }
        }
      }
    },
    "/posts/search": {
      "get": {
        "summary": "Buscar Posts",
        "description": "Busca posts por palavra-chave",
        "tags": ["Posts"],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "description": "Termo de busca (mínimo 2 caracteres)",
            "schema": {
              "type": "string",
              "minLength": 2
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número da página",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Resultados por página",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Busca realizada com sucesso"
          },
          "400": {
            "description": "Termo de busca muito curto"
          }
        }
      }
    },
    "/posts/admin/all": {
      "get": {
        "summary": "Listar Todos os Posts",
        "description": "Lista todos os posts (incluindo rascunhos) - apenas para professores",
        "tags": ["Posts"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Número da página",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Posts por página",
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Todos os posts recuperados com sucesso"
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Verifica o status da API",
        "tags": ["Sistema"],
        "responses": {
          "200": {
            "description": "API funcionando corretamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "ID único do post"
          },
          "title": {
            "type": "string",
            "description": "Título do post"
          },
          "content": {
            "type": "string",
            "description": "Conteúdo do post"
          },
          "author": {
            "type": "string",
            "description": "Autor do post"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags do post"
          },
          "isPublished": {
            "type": "boolean",
            "description": "Status de publicação"
          },
          "readTime": {
            "type": "integer",
            "description": "Tempo estimado de leitura em minutos"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de última atualização"
          }
        }
      }
    }
  }
} 